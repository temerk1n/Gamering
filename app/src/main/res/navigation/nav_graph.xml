<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sch.ui.MainFragment"
        android:label="MatchSchedule"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_filtersFragment"
            app:destination="@id/filtersFragment" />
        <argument
            android:name="dateArr"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/filtersFragment"
        android:name="com.example.sch.ui.FiltersFragment"
        android:label="fragment_filters"
        tools:layout="@layout/fragment_filters" >
        <action
            android:id="@+id/action_filtersFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

</navigation>